{
  "manifest_version": 3,
  "name": "Education Perfect Window Modifier",
  "version": "1.0",
  "description": "Makes the Education Perfect window always appear open on top.",
  "permissions": [
    "activeTab",
    "webNavigation",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon-48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icon-48.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.app.educationperfect.com/*"],
      "js": ["content.js"]
    }
  ]
}
