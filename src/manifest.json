{
  "manifest_version": 3,
  "name": "Education Perfect Window Modifier",
  "version": "1.0",
  "description": "Makes the Education Perfect window always appear open on top.",
  "permissions": [
    "activeTab",
    "webNavigation",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.app.educationperfect.com/*"],
      "js": ["content.js"]
    }
  ]
}
